<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.login.background</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <div class="app_settings_block" data-string="Login Background" string="Login Background" data-key="login_background">
                    <h2>Login Customization</h2>
                    
                    <!-- Background Image -->
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Background Image</span>
                                <field name="login_background_image" widget="image"/>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Form Styling -->
                    <h3>Form Style</h3>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-3 o_setting_box">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Form Color</span>
                                <field name="login_form_color" widget="color"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-3 o_setting_box">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Opacity (%)</span>
                                <field name="login_form_opacity"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-3 o_setting_box">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Blur (px)</span>
                                <field name="login_form_blur"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-3 o_setting_box">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Border Radius (px)</span>
                                <field name="login_form_radius"/>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Form Size -->
                    <h3>Form Size and Position</h3>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-4 o_setting_box">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Width (px)</span>
                                <field name="login_form_width"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-4 o_setting_box">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Height (px)</span>
                                <field name="login_form_height"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-4 o_setting_box">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Position</span>
                                <field name="login_form_position"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
